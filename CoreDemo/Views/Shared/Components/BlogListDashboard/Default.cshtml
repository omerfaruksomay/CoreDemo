@using EntityLayer.Concrete
@model List<Blog>
<div class="row">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Son Yazılar</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th> # </th>
                                <th> Blog Başlığı </th>
                                <th> Kategori </th>
                                <th> Oluşturulduğu zaman </th>
                                <th> Durum </th>
                                <th> Görüntüle </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td> @item.BlogID</td>
                                    <td> @item.BlogTitle </td>
                                    <td> @item.Category.CategoryName</td>
                                    <td> @(((DateTime)item.BlogCreateDate).ToString("dd-MMM-yyyy")) </td>
                                    @if (item.BlogStatus)
                                    {
                                        <td>Aktif</td>
                                    }
                                    else
                                    {
                                        <td>Pasif</td>
                                    }
                                    <td> <a href="/Blog/BlogReadAll/@item.BlogID" class="btn btn-warning">Görüntüle</a> </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>